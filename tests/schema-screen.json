{
  "id": "schema-screen-tests",

  "action: navigate": {
    "action": "navigate",
    "url": "http://127.0.0.1:8000/#schema"
  },

  "wait: #graph1 is drawn": {
    "action": "wait_for_count",
    "query": "#graph1 #bars > rect",
    "count": 10
  },

  "assert: area1 = group-bar-chart": {
    "action": "assert_tag_name_eq",
    "query": "[data-area=\"area1\"] *:first-child",
    "value": "group-bar-chart"
  },

  "assert: area2 = simple-bar-chart": {
    "action": "assert_tag_name_eq",
    "query": "[data-area=\"area2\"] *:first-child",
    "value": "simple-bar-chart"
  },

  "assert: area3 = data-table": {
    "action": "assert_tag_name_eq",
    "query": "[data-area=\"area3\"] *:first-child",
    "value": "data-table"
  },

  "assert: area5 is empty": {
    "action": "assert_child_count_eq",
    "query": "[data-area=\"area5\"]",
    "count": 0
  },

  "assert: area6 is empty": {
    "action": "assert_child_count_eq",
    "query": "[data-area=\"area6\"]",
    "count": 0
  },

  "action: click add button": {
    "action": "click",
    "id": "btnAdd"
  },

  "wait: for added widget": {
    "action": "wait_for_children",
    "query": "[data-area=\"area5\"]",
    "count": 2
  },

  "assert: area5 = group-bar-chart": {
    "action": "assert_tag_name_eq",
    "query": "[data-area=\"area5\"] *:first-child",
    "value": "simple-bar-chart"
  },

  "wait: area5 graph is drawn": {
    "action": "wait_for_count",
    "query": "[data-area=\"area5\"] #bars > rect",
    "count": 5
  }
}