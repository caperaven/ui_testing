{
  "id": "click and wait",

  "navigate": {
    "action": "navigate",
    "url": "http://127.0.0.1:8000"
  },

  "set attribute": {
    "action": "click",
    "id": "btnSetAttribute"
  },

  "assert data-active is true": {
    "action": "assert_attr_eq",
    "id": "target",
    "attr": "data-active",
    "value": "true"
  },

  "set style": {
    "action": "click",
    "id": "btnSetStyle"
  },

  "assert data-active is true": {
    "action": "assert_style_eq",
    "id": "target",
    "property": "background",
    "value": "gray"
  },

  "set text": {
    "action": "click",
    "id": "btnSetText"
  },

  "set property": {
    "action": "click",
    "id": "btnSetProperty"
  }
}